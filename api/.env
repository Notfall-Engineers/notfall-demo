PORT=8080

# App gating
APP_ENV=demo
DEMO_ROUTES_ENABLED=true
PAYMENTS_MODE=demo
WEBHOOKS_ALLOW_IN_DEMO=false

# Waitlist (your existing setup)
WAITLIST_COLLECTION=dao_waitlist_v1
FIRESTORE_PROJECT_ID=your-gcp-project-id
